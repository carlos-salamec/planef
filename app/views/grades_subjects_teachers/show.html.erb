<div class="form-style-5">
	<h1> <%= @grade.name %> </h1>
	<h2> <%= @subject.name %> </h2>

	<% @grades_subjects_teacher.planifications.each do |p| %>
		<article class="planification-item">
			<section class="planification-info">
			  <div class="subject"><%= p.name %></div>
			  <div class="courses"><%= p.date %></div>
			</section>
			<section class="planification-links">
			  <%= link_to 'Ver', p, :class => "planification-link", :method => :get  %><br>
			  <%= link_to 'Editar', edit_planification_path(p), :class => "planification-link", :method => :get   %><br>
			  <%= link_to 'Eliminar', p, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "planification-link"%>
		  </section>
		</article>
	<% end %>

