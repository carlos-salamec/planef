<%= form_for @search, html: { class: 'pure-form' } do |f| %>

  <div class='field'>
    <%= f.label :keywords %><br />
    <%= f.text_field :keywords %>
  </div>

  <div class='field'>
    <%= f.label :subject %><br />
    <%= f.select :subject, options_for_select(@subjects), include_blank: true %>
  </div>

  <div class='field'>
    <%= f.label :school %><br />
    <%= f.select :school, options_for_select(@schools), include_blank: true %>
  </div>

  <div class='field'>
    <%= f.label :grade %><br />
    <%= f.select :grade, ["Agrega Nuevo Curso..."] | Grade.all.map { |g| [g.name, "#{g.name}"] }, include_blank: true %>
  </div>

  <div class = 'actions'><%= f.submit "Buscar", class: "pure-button pure-button-primary" %> </div>

<% end %>

